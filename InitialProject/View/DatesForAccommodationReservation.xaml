<Window x:Class="InitialProject.View.DatesForAccommodationReservation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View"
        mc:Ignorable="d"
        Title="DatesForAccommodationReservation" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid x:Name="FreeDates" ItemsSource="{Binding Path=freeDatesForAccommodations,Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"  AutoGenerateColumns="False" Grid.ColumnSpan="3" IsReadOnly="True" VerticalAlignment="Center" HorizontalAlignment="Center" Height="211" Width="391">
            <DataGrid.Columns>
                <DataGridTextColumn Header="START DATE" Width="1*" Binding="{Binding Start, Mode=OneWay}"/>
                <DataGridTextColumn Header="END DATE" Width="1*" Binding="{Binding End, Mode=OneWay}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
