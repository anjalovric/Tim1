<Window x:Class="InitialProject.WPF.Views.GuideViews.GuideWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.WPF.Views.GuideViews"
        mc:Ignorable="d"
        Title="GuideWindow" Height="750" Width="1100" WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel>
            <Grid DockPanel.Dock="Top" Height="40">

                <DockPanel  Width="500" HorizontalAlignment="Left">
                    <Menu DockPanel.Dock="Top" Width="500" Height="40" HorizontalAlignment="Left">
                        <MenuItem Header="Home" Height="40" Width="100" FontSize="18" Click="Home_Click" >

                        </MenuItem>
                        <MenuItem Header="Tours" Height="40" Width="100" FontSize="18" >
                            <MenuItem Header="Add" Height="35" Width="150" FontSize="18" Click="Add_Click">
                         
                            </MenuItem>
                            <MenuItem Header="Cancel" Height="35" Width="150" FontSize="18" Click="Cancel_Click" >

                            </MenuItem>
                        </MenuItem>
                        <MenuItem Header="Statistics" Height="40" Width="100" FontSize="18" >
                            <MenuItem Header="Tours" Height="35" Width="150" FontSize="18" Click="TourStatitcs_Click">

                            </MenuItem>
                            <MenuItem Header="Requests" Height="35" Width="150" FontSize="18"  >
                                <MenuItem Header="Monthly" Height="35" Width="150" FontSize="18"  >

                                </MenuItem>
                                <MenuItem Header="Yearly" Height="35" Width="150" FontSize="18" >

                                </MenuItem>
                            </MenuItem>
                        </MenuItem>
                        <MenuItem Header="Reviews" Height="40" Width="100" FontSize="18" >

                        </MenuItem>
                        <MenuItem Header="Requests" Height="40" Width="100" FontSize="18" Click="Requests_Click" >

                        </MenuItem>
                    </Menu>
                </DockPanel>
                <DockPanel  Width="400" HorizontalAlignment="Right">
                    <Menu DockPanel.Dock="Top" Width="150" Height="40" HorizontalAlignment="Right">
                        <MenuItem  Height="40" Width="75" FontSize="20" >

                        </MenuItem>
                        <MenuItem  Height="40" Width="75" FontSize="20" >

                        </MenuItem>

                    </Menu>
                </DockPanel>
            </Grid>

            <Frame x:Name="Main" Margin="0,0,0,0" NavigationUIVisibility="Hidden"/>
        </DockPanel>
    </Grid>
</Window>
